{
  "SeeDocsAt": "https://github.com/Microsoft/AirSim/blob/master/docs/settings.md",
  "SettingsVersion": 1.2,
  "SimMode": "Car",
  "DefaultSensors": {
    "Barometer": {
      "SensorType": 1,
      "Enabled": true
    },
    "Imu": {
      "SensorType": 2,
      "Enabled": true
    },
    "Gps": {
      "SensorType": 3,
      "Enabled": true
    },
    "Magnetometer": {
      "SensorType": 4,
      "Enabled": true
    },
    "Distance": {
      "SensorType": 5,
      "Enabled": true
    },
    "Lidar": {
      "SensorType": 6,
      "Enabled": true,
      "NumberOfChannels": 16, Number of channels/lasers of the lidar
      "Range": 50, Range, in meters
      "PointsPerSecond": 10000, Number of points captured per second
      "RotationsPerSecond": 10, Rotations per second
      "VerticalFOVUpper": 45, Vertical FOV upper limit for the lidar, in degrees
      "VerticalFOVLower": 45, Vertical FOV lower limit for the lidar, in degrees
      "X": 0, Position of the lidar relative to the vehicle (in NED, in meters)
      "Y": 0,
      "Z": -1,
      "Roll": 0, Roation of the lidar relative to the vehicle (in degrees)
      "Pitch":  0,
      "Yaw": 0,
      "DrawDebugPoints": true Be default, the lidar points are not drawn on the viewport. 
    }
  }
}

